{
  "name": "gov-support-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "openapi:gen": "openapi-generator-cli generate -i ../frontend-handoff/api/openapi.yaml -g typescript-axios -o src/lib/api"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@auth/dynamodb-adapter": "^2.10.0",
    "@aws-sdk/client-dynamodb": "^3.844.0",
    "@aws-sdk/client-ssm": "^3.844.0",
    "@aws-sdk/lib-dynamodb": "^3.844.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@monaco-editor/react": "^4.6.0",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@types/cookie": "^0.6.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "dompurify": "^3.0.0",
    "jose": "^6.0.11",
    "next": "^14.2.30",
    "next-auth": "^5.0.0-beta.29",
    "next-secure-headers": "^2.2.0",
